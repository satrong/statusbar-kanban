{
  "name": "statusbar-kanban",
  "displayName": "状态栏股票看板",
  "description": "",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.79.0"
  },
  "publisher": "satrongcao",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/satrong/statusbar-kanban.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "状态栏股票看板",
      "properties": {
        "statusbar-kanban.stock": {
          "type": "array",
          "default": [],
          "description": "股票代码列表，建议不要超过4个"
        },
        "statusbar-kanban.map": {
          "type": "object",
          "default": null,
          "description": "股票代码映射简称，如`{ \"sz300712\": \"YF\" }`"
        },
        "statusbar-kanban.barTpl": {
          "type": "string",
          "default": "{price} {change} {percent}",
          "description": "状态栏模板，可用占位符： 最新价`{price}`, 涨跌幅金额`{change}`, 涨跌百分比`{percent}`"
        },
        "statusbar-kanban.interval": {
          "type": "number",
          "default": 5,
          "description": "数据更新时间间隔，单位秒，默认5秒"
        },
        "statusbar-kanban.separator": {
          "type": "string",
          "default": "$(debug-stackframe-dot)",
          "description": "股票代码之间的分隔符"
        }
      }
    }
  },
  "scripts": {
    "build": "npm run package && npx @vscode/vsce package -o ./",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "iconv-lite": "^0.6.3"
  }
}
